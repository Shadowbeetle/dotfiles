{
  "coc.preferences.formatOnSaveFiletypes": [
    "css", 
    "javascript", 
    "javascriptreact", 
    "typescript",
    "typescriptreact",
    "markdown"
  ],
  "languageserver": {
    "graphql": {
      "command": "graphql-lsp",
      "args": ["server", "-m", "stream"],
      "filetypes": ["typescript", "javascript", "javascriptreact", "typescriptreact", "graphql"],
      "trace.server": "verbose"
    },
    "astro": {
      "filetypes": ["astro"],
      "command": "~/.nvm/versions/node/v16.14.0/lib/node_modules/@astrojs/language-server/bin/nodeServer.js",
      "args": ["--stdio"],
      "rootPatterns": ["package.json", "astro.config.mjs", ".git"],
      "trace.server": "verbose"
    }
  },
  "ltex.additionalRules.languageModel": "C:\\MyService\\ngrams-en",
  "ltex.additionalRules.motherTongue": "en-US",
  "ltex.trace.server": "verbose",
  "Lua.telemetry.enable": false,
  "Lua.diagnostics.globals": [
    "vim",
    "hs",
    "it",
    "describe",
    "before_each",
    "after_each"
  ]
}

