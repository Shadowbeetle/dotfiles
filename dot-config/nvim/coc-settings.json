{
  "coc.preferences.formatOnSaveFiletypes": [
    "css", 
    "javascript", 
    "javascriptreact", 
    "typescript",
    "typescriptreact",
    "markdown"
  ],
  "languageserver": {
    "graphql": {
      "command": "graphql-lsp",
      "args": ["server", "-m", "stream"],
      "filetypes": ["typescript", "javascript", "javascriptreact", "typescriptreact", "graphql"],
      "trace.server": "verbose"
    },
    "lua": {
      "filetypes": [
        "lua"
      ],
      "command": "lua-language-server",
      "settings": {
        "Lua": {
          "workspace": {
            "library": {
              "/usr/share/nvim/runtime/lua": true,
              "/usr/share/nvim/runtime/lua/vim": true,
              "/usr/share/nvim/runtime/lua/vim/lsp": true
            },
            "maxPreload": 2000,
            "preloadFileSize": 1000
          },
          "diagnostics": {
            "globals": [
              "vim",
              "hs",
              "it",
              "describe",
              "before_each",
              "after_each"
            ]
          }
        }
      }
    }
  },
  "ltex.additionalRules.languageModel": "C:\\MyService\\ngrams-en",
  "ltex.additionalRules.motherTongue": "en-US",
  "ltex.trace.server": "verbose",
  "Lua.telemetry.enable": false
}

