[user]
	email = tamas.kadlecsik@gmail.com
	name = Shadowbeetle
[core]
	excludesfile = /home/nazgul/.gitignore-global
	autocrlf = input
[pull]
	rebase = true
[push]
	default = current
[alias]
  a = add
  aa = add --all
  co = checkout
  c = commit -m
  ca = commit -am
  cn = commit -nm
  can = commit -nam
  amend = commit --amend --no-edit
  st = status
  br = branch
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  graph = log --oneline --decorate --graph --all
  type = cat-file -t
	dump = cat-file -p
  p = push origin HEAD
	d = difftool
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[init]
	defaultBranch = main
